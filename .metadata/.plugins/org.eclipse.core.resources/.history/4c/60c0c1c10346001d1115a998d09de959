<meta charset="UTF-8">
<title>회원가입 입력 화면</title>
</head>

<script>
	function checkLogin() {
		
		var regExpId = /^[a-z|A-Z|ㄱ-ㅎ|ㅏ-ㅣ|가-힣]/;
		var regExpName = /^[가-힣]*$/;
		var regExpPasswd = /^[0-9]*$/;
		var regExpPhone = /^\d{3}-\d{3,4}-\d{4}$/;
		var regExpEmail = /^[0-9a-zA-Z]([-_\.]?[0-9a-zA-Z])*@[0-9a-zA-Z]([-_\.]?[0-9a-zA-Z])*\.[a-zA-Z]{2,3}$/i;
		
		var form = document.loginForm;
		
		var phone = form.phone1.value + "-" +form.phone2.value + "-" + form.phone3.value;
		
		if(form.id.value=="") {
			alert("아이디를 입력해주세요");
			form.id.focus();
			return false;
		} else if (form.id.value.length < 4 || form.id.value.length > 12) {
			alert("아이디는 4 ~ 12자 이내로 입력 가능합니다!");
			form.id.focus();
			return false;
		} else if(!regExpId.test(form.id.value)){
			alert("아이디는 문자로 시작해주세요!");
			form.id.focus();
			return false;
		} else if (form.pw.value==""){
			alert("비밀번호를 입력해주세요.");
			form.pw.focus();
			return false;
		} else if (form.pw.value.length < 8 || form.pw.value.length > 14){
			alert("비밀번호는 8 ~ 14자 이내로 입력 가능합니다.");
			form.pw.focus();
			return false;	
		} else if(!regExpPasswd.test(form.pw.value)){
			alert("비밀번호는 숫자만입력해주세요!");
			form.pw.focus();
			return false;
		} else if(form.name.value==""){
			alert("이름을 입력해 주세요.");
			form.name.focus();
			return false;
		} else if(!regExpName.test(form.name.value)){
			alert("이름은 한글만 입력해주세요");
			form.name.focus();
			return false;
		} else if (!regExpEmail.test(form.email.value)){
			alert("이메일 입력을 확인해주세요");
			form.email.focus();
			return false;
		} else if(!regExpPhone.test(phone)){
			alert("연락처 입력을 확인해주세요");
			form.phone2.focus();
			return false;
		}
		form.submit();
	}
	
	<!-- 아이디중복체크 -->
	function winopen(){
		//새창을 열어서 페이지를 오픈 후 -> 회원아이디정보를 가지고 중복체크
		//1. 아이디가 없으면 알림창과 진행x
		if(form.id.value =="" || document.fr.id.value.length < 0){
			alert("아이디를 먼저 입력해주세요")
			document.fr.id.focus();
		}else{
			//2. 회원정보아이디를 가지고 있는 지 체크하려면 DB에 접근해야한다.
			//자바스크립트로 어떻게 DB에 접근할까? => 파라미터로 id값을 가져가서 jsp페이지에서 진행하면 된다.
			window.open("joinIdCheck.jsp?userid="+document.fr.id.value,"","width=500, height=300");
		}
	}
</script>


<body>

	<h2>회원가입</h2>
	
	<form action="join_ok.jsp" method="post" name="loginForm">
		아이디:<input type="text" name="id"><br/>
		<input type="button" value="중복확인" class="dup" onclick="winopen()"><br>
		비밀번호:<input type="password" name="pw"><br/>
		이름:<input type="text" name="name"><br/>
		이메일:<input type="text" name="email"><br/>
		전화번호:
		<select name="phone1">
			<option>010</option>
			<option>02</option>
			<option>031</option>
			<option>051</option>
		</select>
		<input type="text" name="phone2" size="5" maxlength="4">
		<input type="text" name="phone3" size="5" maxlength="4">
		
		<br/>
		<input type="radio" name="gender" value="m" checked>남자
		<input type="radio" name="gender" value="f">여자
		
		<input type="button" value="가입" onclick="checkLogin()">
	</form>
</body>
</html>